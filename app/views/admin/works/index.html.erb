<p id="notice"><%= notice %></p>

<h1><%= @category.title %> Works</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Worked at</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.category_id %></td>
        <td><%= work.title %></td>
        <td><%= work.worked_at %></td>
        <td><%= work.content %></td>
        <td><%= link_to 'Show', [:admin, @category, work] %></td>
        <td><%= link_to 'Edit', edit_admin_category_work_path(@category, work) %></td>
        <td><%= link_to 'Destroy', [:admin, @category, work], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work', new_admin_category_work_path %>
