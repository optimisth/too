<p id="notice"><%= notice %></p>

<h1><%= @category.title %>의 Work 리스트</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Worked at</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.category_id %></td>
        <td><%= work.title %></td>
        <td><%= work.worked_at %></td>
        <td><%= work.content %></td>
        <td><%= link_to '수정하기', edit_admin_category_work_path(@category, work) %></td>
        <td><%= link_to '삭제하기', [:admin, @category, work], method: :delete, data: { confirm: '정말 삭제하겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 Work 생성', new_admin_category_work_path %>
